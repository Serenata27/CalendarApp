<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/asignmentTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Enter Assignment Title"
        />
    <EditText
        android:id="@+id/asignmentDue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/asignmentTitle"
        android:hint="Enter Assignment Due date"
        />
    <EditText
        android:id="@+id/asignmentClass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/asignmentDue"
        android:hint="Enter Class Name"
        />

    <Button
        android:id="@+id/asignmentadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asignmentClass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add" />
    <Button
        android:id="@+id/asignmentEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/asignmentadd"
        android:layout_centerHorizontal="true"
        android:text="Edit" />

    <ListView
        android:id="@+id/asignmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/asignmentEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />




</RelativeLayout>

